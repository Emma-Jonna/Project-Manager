@{
    ViewData["Title"] = "UpdateProject";
}
@model EditProject;

<h1>UpdateProject</h1>

<secion>
    <form method="post" asp-controller="Project" asp-action="UpdateProjectInfo">
        <label>
            <p>Name</p>
            <input />
        </label>

        <select>
            <option>category</option>
        </select>

        <select>
            <option>type</option>
            <option selected>name</option>
        </select>

        <select>
        <option>status</option>
        </select>

        <label>
            <p>Description</p>
        </label>

        <label>
            <p>Start date</p>
            <input type="date" />
        </label>

        <label>
        <p>End date</p>
        <input type="date" />
        </label>

        <label>
            <p>Before Image</p>
            <input type="file" />
        </label>

        <label>
        <p>After Image</p>
        <input type="file" />
        </label>

        <label>
            <p>Sketch</p>
            <input type="file" />
        </label>

        <label>
            <p>Pattern Link</p>
            <input />
        </label>

        <button type="submit">Save Changes</button>
    </form>
</secion>