@{
    ViewData["Title"] = "UpdateProject";
}
@model EditProject;

<h1>UpdateProject</h1>

<secion>
    <form method="post" asp-controller="Project" asp-action="UpdateProjectInfo">
        <label>
            <p>Name</p>
            <input value="@Model.Project.Name" />
        </label>

        <label>
            <p>Project Category</p>
            <select name="CategoryId">
                <option value="0">...</option>
                @foreach (var item in Model.Category)
                {
                    if (item.Id == Model.Project.CategoryId)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }

                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </label>

        <select>
            <option>type</option>
            <option selected>name</option>
        </select>

        <select>
            <option>status</option>
        </select>

        <label>
            <p>Description</p>
            <input name="Description" type="text" value="@Model.Project.Description"/>
        </label>

        <label>
            <p>Start date</p>
            <input type="date" />
        </label>

        <label>
            <p>End date</p>
            <input type="date" />
        </label>

        <label>
            <p>Before Image</p>
            <input type="file" />
        </label>

        <label>
            <p>After Image</p>
            <input type="file" />
        </label>

        <label>
            <p>Sketch</p>
            <input type="file" />
        </label>

        <label>
            <p>Pattern Link</p>
            <input />
        </label>

        <button type="submit">Save Changes</button>
    </form>
</secion>